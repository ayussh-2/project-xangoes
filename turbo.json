{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {},
        "test": {},
        "type-check": {},
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false,
            "dependsOn": ["db:generate"]
        },
        "db:studio": {
            "cache": false,
            "persistent": true
        }
    }
}
